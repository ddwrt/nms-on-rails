<h2>New ip range</h2>

<p>for network "<strong><%= @network.name %></strong> (<%= @network.description %>")</p>

<div class="alert alert.notice">To create 100 ips from 192.168.1.20 to 192.168.1.120
  use: 
  <ul>
    <li>192.168.1 as first three digits</li>
    <li>20 as starting number</li>
    <li>120 as ending number</li>
  </ul>
</div>

<%= form_tag network_ips_path(@network), :method => "post" do %>
  <label>first three network digits</label>
  <input type="text" name="n1" class="input-mini"/> .
  <input type="text" name="n2" class="input-mini"/> .
  <input type="text" name="n3" class="input-mini"/>

  <label>starting number</label>
  <input type="text" name="start" class="input-mini"/> 
  <label>ending number</label>
  <input type="text" name="end" class="input-mini"/> 

  <br/>

  <input type="submit" class="btn"/>
<% end %>

